#include <stdio.h>
#include <string.h>
void revers(char s[],int l);

int main()
{
       char s[100];
       printf("enter a sentence : ");
       fflush(stdout);
       gets(s);
       revers(s,strlen(s));


	return 0;
}

void revers(char s[],int l)
{
    for(int i=l-1;i>=0;i--)
    {
    	printf("%c",s[i]);
    }
}
